extends ../shared/template
block content
  h2 browse
  #map
  .row
    .col-xs-9
      table.table.table-striped.table-hover
        thead
          th Name
          th Location
          th Age
          th looking for
        tbody
          each user in users
            tr(data-name=user.loc.name, data-lat=user.loc.lat, data-lng=user.loc.lng)
             td: a(href='/profile/#{user.email}')= user.name || user.username || user.displayName ||user.email
             td= user.loc.name || 'N/A'
             td= user.age || 'N/A'
             td= user.seeking || 'N/A'
block scripts
  script(src='/js/user/browse.js')
